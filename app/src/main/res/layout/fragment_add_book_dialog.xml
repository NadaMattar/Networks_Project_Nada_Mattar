<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1C685"
    tools:context=".views.fragments.AddBookDialog">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your book"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/img_add_book"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_book_photo"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/brown"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Book Name"
                android:drawableStart="@drawable/ic_menu_book"
                android:drawablePadding="10dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/brown"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/author_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Author Name"
                android:drawableStart="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/brown"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/book_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Category Name"
                android:drawableStart="@drawable/ic_menu_book"
                android:drawablePadding="10dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:backgroundTint="@color/brown"
            android:textColor="#F1C685"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="30dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>